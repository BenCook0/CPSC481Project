<Page x:Class="CPSC481WPF.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CPSC481WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">
    <Grid Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".2*"/>
            <ColumnDefinition Width=".5*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <TextBox Name ="usernameField" Margin="0,243,0,0" Text="Username" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="1"/>
        <PasswordBox Name="passwordField" Margin="0,299,0,0"  VerticalAlignment="Top" Grid.Column="1" Grid.RowSpan="2"/>
        <Button Name ="loginButton" Content="Login" Margin="0,337,0,0" VerticalAlignment="Top" Click="LoginButtonClick" Grid.Column="1"/>
        <Image HorizontalAlignment="Center" Height="233" Margin="0,132,0,0" VerticalAlignment="Top" Width="368" Source="/Bitfit Logo.png" Grid.Column="3" Grid.RowSpan="2"/>
        <Rectangle Stroke="#44acc2" Fill="#44acc2" HorizontalAlignment="Stretch" Grid.Column="0"/>
    </Grid>
</Page>
