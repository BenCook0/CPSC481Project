<Page x:Class="CPSC481WPF.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NewCPSC481"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Page2">
    <Grid>
        <Rectangle Stroke="#44acc2" Fill="#44acc2" HorizontalAlignment="Stretch" Grid.Column="0"/>
        <TabControl Margin="0,100,0,0">
            <TabItem Header="Welcome" FontSize="40">
                <Grid>
                    <TextBlock FontSize="60"
                        HorizontalAlignment="Center" Margin="0,20,0,0" 
                               Text="Welcome To Your Personal Fitness Breakdown!" 
                               TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <TextBlock FontSize="50"
                        HorizontalAlignment="Center" Margin="0,120,0,0" 
                               Text="Begin by Choosing What you Want to View!" 
                               TextWrapping="Wrap" VerticalAlignment="Top"/>

                    <Button Content="Take a look at your recent fitness data"
                            FontSize="40"
                            HorizontalAlignment="Center" VerticalAlignment="Top" Width="964" Height="98" Click="Button_Click" Margin="0,250,0,0"/>
                    <Button Content="View a graphical breakdown of your fitness data"
                            FontSize="40"
                            HorizontalAlignment="Center" VerticalAlignment="Top" Width="964" Height="98" Click="Button_Click" Margin="0,450,0,0"/>
                    <Button Content="Set a goal or view your current progress"
                            FontSize="40"
                            HorizontalAlignment="Center" VerticalAlignment="Top" Width="964" Height="98" Click="Button_Click" Margin="0,650,0,0"/>
                </Grid>
            </TabItem>
            <TabItem Header="Recent Data" FontSize="40">
                <Grid Background="Beige"/>
            </TabItem>
            <TabItem Header="Graphs" FontSize="40">
                <Grid Background="AliceBlue">

                </Grid>
            </TabItem>
            <TabItem Header="Goals" FontSize="40" HorizontalAlignment="Left" Margin="-2,-2,0,0" Width="114">
                <Grid>
                    <Button Content="Set New Goal" HorizontalAlignment="Left" Margin="352,100,0,0" VerticalAlignment="Top" Click="setGoalButtonClick"/>
                    <Popup Margin="0,0,0,0" Name="setGoalPopup" HorizontalAlignment="Left"   
                        VerticalAlignment="Top" Width="800" Height="450" Placement="Center" IsOpen="False">
                        <Grid>
                            <Frame Source="SetGoalPopup.xaml">
                            </Frame>
                        </Grid>
                    </Popup>
                </Grid>
            </TabItem>
            <TabItem Header="Settings" FontSize="40">
                <Grid Background="Red">
                </Grid>
            </TabItem>
        </TabControl>
        <Button FontSize="40"
            Content="Log Out" HorizontalAlignment="Right" Margin="0,35,24,0" VerticalAlignment="Top" RenderTransformOrigin="1.053,-1.116" Click="LogOutButtonClick" Height="60" Width="154"/>
    </Grid>
</Page>
