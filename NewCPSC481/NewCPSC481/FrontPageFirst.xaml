<UserControl x:Class="NewCPSC481.FrontPageFirst"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NewCPSC481"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock FontSize="60"
                        HorizontalAlignment="Center" Margin="0,10,0,0" 
                               Text="Track your Fitness Today!" 
                               TextWrapping="Wrap" VerticalAlignment="Top"/>

        <TextBlock FontSize="50"
                        HorizontalAlignment="Left" Margin="35,95,0,0" 
                               Text="View your Bitfit Data:" 
                               TextWrapping="Wrap" VerticalAlignment="Top"/>

        <TextBlock FontSize="40"
                        HorizontalAlignment="Left" Margin="35,0,0,0" 
                               Text="Steps Taken" 
                               TextWrapping="Wrap" VerticalAlignment="Center"/>
        <!-- will replace the blue rectangles with images-->
        <Rectangle HorizontalAlignment="Left" Height="100" Margin="88,257,0,0" 
                               Fill="Blue"
                               Stroke="Blue" VerticalAlignment="Top" Width="100"/>

        <TextBlock FontSize="40"
                        HorizontalAlignment="Left" Margin="290,0,0,0" 
                               Text="Calories Burned" 
                               TextWrapping="Wrap" VerticalAlignment="Center"/>
        <!-- will replace the blue rectangles with images-->
        <Rectangle HorizontalAlignment="Left" Height="100" Margin="379,257,0,0" 
                               Fill="Blue"
                               Stroke="Blue" VerticalAlignment="Top" Width="100"/>

        <TextBlock FontSize="40"
                        HorizontalAlignment="Left" Margin="608,0,0,0" 
                               Text="Heartrate" 
                               TextWrapping="Wrap" VerticalAlignment="Center"/>
        <!-- will replace the blue rectangles with images-->
        <Rectangle HorizontalAlignment="Left" Height="100" Margin="641,257,0,0" 
                               Fill="Blue"
                               Stroke="Blue" VerticalAlignment="Top" Width="100"/>
        
    </Grid>
</UserControl>
