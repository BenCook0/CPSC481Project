<UserControl x:Class="NewCPSC481.FrontPageFirst"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NewCPSC481"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Viewbox>
        <Grid>
            <TextBlock FontSize="60"
                        HorizontalAlignment="Center" Margin="0,10,0,0" 
                               Text="Track your Fitness Today!" 
                               TextWrapping="Wrap" VerticalAlignment="Top"/>

            <TextBlock FontSize="50"
                        HorizontalAlignment="Left" Margin="35,95,0,0" 
                               Text="View your Bitfit Data:" 
                               TextWrapping="Wrap" VerticalAlignment="Top"/>

            <TextBlock FontSize="40"
                        HorizontalAlignment="Left" Margin="35,178,0,0" 
                               Text="Steps Taken" 
                               TextWrapping="Wrap" VerticalAlignment="Top"/>
            <!-- will replace the blue rectangles with images-->
            <Image Height="100" Width="100" HorizontalAlignment="Left" Source="/icons/frontPageIcon1.png" Margin="88,257,0,0"/>

            <TextBlock FontSize="40"
                        HorizontalAlignment="Left" Margin="290,178,0,0" 
                               Text="Calories Burned" 
                               TextWrapping="Wrap" VerticalAlignment="Top"/>
            <!-- will replace the blue rectangles with images-->
            <Image Height="100" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Source="/icons/frontPageIcon2.png" Margin="379,257,0,0"/>

            <TextBlock FontSize="40"
                        HorizontalAlignment="Left" Margin="608,178,0,0" 
                               Text="Heartrate" 
                               TextWrapping="Wrap" VerticalAlignment="Top"/>
            <!-- will replace the blue rectangles with images-->
            <Image Height="100" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Source="/icons/frontPageIcon3.png" Margin="641,257,0,0"/>

        </Grid>
    </Viewbox>
</UserControl>
